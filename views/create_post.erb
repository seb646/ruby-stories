<% sessionid = session[:id]
@user = User.find(sessionid) 
%>
<h2>Create Post</h2>
<form action="/submit-post" method="POST">
  <input type="hidden" name="post[user_id]" value="<%= @user.id %>" type="text">
  <div class="form-group row">
    <label for="title" class="col-sm-2 col-form-label">Post Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="post[title]" placeholder="Title">
    </div>
  </div>
  <div class="form-group row">
    <label for="body" class="col-sm-2 col-form-label">Story</label>
    <div class="col-sm-10">
      <textarea type="text" class="form-control" id="body" name="post[message]" rows="3" placeholder="Tell your story"></textarea>
    </div>
  </div>
  <div class="form-group row">
    <label for="tags" class="col-sm-2 col-form-label">Tags</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="tags" name="post[tags]" placeholder="Tags">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-12">
      <input class="btn btn-primary" type="submit" value="Submit"/>
    </div>
  </div>
</form>