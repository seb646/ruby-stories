<h2>All Stories</h2><br>

<% @username = User.where(id: Post.pluck(:user_id))
	@posts.each do |post| %>
	<div class="card">
		<h5 class="card-header"><%= post.title %></h5>
		<div class="card-body" style="font-weight: initial;">
			<h5 class="card-title">Posted on <%= post.created_at %> by <%= @username %></h5>
			<p class="card-text"><%= post.message %></p>
			<p class="card-text"><%= post.tags %></p>
		</div>
	</div>
	<br>
<% end %>